{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": ["README.md",
                    "snow_profile.js",
                    "snow_profile_button.js",
                    "snow_profile_popup.js",
                    "snow_profile_layer.js",
                    "snow_profile_grid.js",
                    "snow_profile_main.js"
                   ]
    },
    "plugins": [ "plugins/markdown" ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        }
    },
    "opts": {
        "destination": "./docs",
        "private"    : true,
        "tutorials":  "./tutorials"
    }
}
